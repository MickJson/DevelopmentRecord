<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_bottom_alignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView底部对齐"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_advanced_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SpannableStringBuilder使用"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_foreground_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="前台服务"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_mqtt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MQTT收发指令"
        android:textColor="@android:color/black" />

</LinearLayout>